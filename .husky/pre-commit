echo "ğŸ” Running pre-commit checks..."

# Run TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
pnpm run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix the errors before committing."
  exit 1
fi

# Run ESLint
echo "ğŸ” Running ESLint..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix the linting errors before committing."
  exit 1
fi

# Run tests (skip if no tests exist)
echo "ğŸ§ª Checking for tests..."
if find src -name "*.test.*" -o -name "*.spec.*" 2>/dev/null | grep -q .; then
  echo "ğŸ§ª Running tests..."
  pnpm test
  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix the failing tests before committing."
    exit 1
  fi
else
  echo "â„¹ï¸ No tests found, skipping test step."
fi

echo "âœ… All pre-commit checks passed!"